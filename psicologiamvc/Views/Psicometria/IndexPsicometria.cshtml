@model IEnumerable<psicologiamvc.Models.psicometria>

@{
    ViewBag.Title = "IndexPsicometria";
}

@using (Html.BeginForm("IndexPsicometria", "Psicometria", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            Busqueda Evaluado
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.TextBox("cadena", "", new { @class = "form-control", placeholder = "Nombre Paterno Materno" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    </div>
}

@if (Model != null)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
                <tr>
                    <th>Curp</th>
                    <th>Evaluacion</th>
                    <th>F. Test</th>
                    <th>Mac</th>
                    <th>Fig</th>
                    <th>The</th>
                    <th>MMP</th>
                    <th>Bio</th>
                    <th>Cle</th>
                    <th>Lus</th>
                    <th>Ape</th>
                    <th>Rav</th>
                    <th>BetII</th>
                    <th>Htp</th>
                    <th>Sac</th>
                    <th>B16</th>
                    <th>BetIII</th>
                    <th>Moca</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.curp)</td>
                        <td>@Html.DisplayFor(modelItem => item.cevaluacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.fechaAplicacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.mac)</td>
                        <td>@Html.DisplayFor(modelItem => item.fig)</td>
                        <td>@Html.DisplayFor(modelItem => item.the)</td>
                        <td>@Html.DisplayFor(modelItem => item.min)</td>
                        <td>@Html.DisplayFor(modelItem => item.bio)</td>
                        <td>@Html.DisplayFor(modelItem => item.cle)</td>
                        <td>@Html.DisplayFor(modelItem => item.lus)</td>
                        <td>@Html.DisplayFor(modelItem => item.ape)</td>
                        <td>@Html.DisplayFor(modelItem => item.rav)</td>
                        <td>@Html.DisplayFor(modelItem => item.bet2)</td>
                        <td>@Html.DisplayFor(modelItem => item.htp)</td>
                        <td>@Html.DisplayFor(modelItem => item.sac)</td>
                        <td>@Html.DisplayFor(modelItem => item.b16)</td>
                        <td>@Html.DisplayFor(modelItem => item.bet3)</td>
                        <td>@Html.DisplayFor(modelItem => item.moca)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section scripts
{
    @*js*@
    <script src="~/Content/js/plugins/dataTables/datatables.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });
    </script>
}